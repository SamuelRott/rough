//- local vars
block vars
	- var bodyClass = ''
	- var active = active || ''

doctype
html.no-js(lang='en')
	head
		block header
			meta(charset='utf-8')
			meta(http-equiv='X-UA-Compatible', content='IE=edge')
			title Rough
			meta(name='description', content='')
			meta(name='viewport', content='width=device-width, initial-scale=1')

			link(rel='stylesheet', href='styles/main.css')

			script(src='scripts/vendor/modernizr-custom.js')
			script(src='images/icons/grunticon.loader.js')

			script.
				grunticon(['images/icons/icons.data.svg.css', 'images/icons/icons.data.png.css', 'images/icons/icons.fallback.css'], grunticon.svgLoadedCallback );
			noscript.
				<link href="images/icons/icons.fallback.css" rel="stylesheet">
	body(class="#{bodyClass}")

		.App
			header#SiteHeader.SiteHeader
				include header

			main#SiteMain.SiteMain
				block outlet

			//-footer#SiteFooter.SiteFooter
				include footer

			include loader

		.Scripts
			script(src='scripts/bundle.js')

			//- Google Analytics: change UA-XXXXX-X to be your site's ID.
