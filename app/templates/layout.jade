//- local vars
block vars
	- var bodyClass = ''
	- var active = active || ''

doctype
html.no-js(lang='en')
	head
		block header
			meta(charset='utf-8')
			meta(http-equiv='X-UA-Compatible', content='IE=edge')
			title Rough
			meta(name='description', content='')
			meta(name='viewport', content='width=device-width, initial-scale=1')

			// build:css styles/main.css
			link(rel='stylesheet', href='styles/main.css')
			// endbuild

			// build:js scripts/vendor/modernizr.js
			script(src='scripts/vendor/modernizr-custom.js')
			// endbuild

	body(class="#{bodyClass}")

		//-header#SiteHeader.SiteHeader
			include header
			include navigation

		main#SiteMain.SiteMain
			block outlet

		//-footer#SiteFooter.SiteFooter
			include footer

		.Scripts
			// build:js scripts/vendor.js
			script(src='../bower_components/jquery/dist/jquery.js')
			script(src='../bower_components/lazysizes/lazysizes.js')
			script(src='../bower_components/imagesloaded/imagesloaded.pkgd.js')
			script(src='../bower_components/masonry/dist/masonry.pkgd.js')
			//- script(src='../bower_components/jquery-waypoints/waypoints.js')
			//- script(src='../bower_components/jquery-waypoints/shortcuts/sticky-elements/waypoints-sticky.js')
			// endbuild

			// build:js scripts/main.js
			//- script(src='scripts/component.js')
			script(src='scripts/tabs.js')
			script(src='scripts/rough-masonry.js')
			script(src='scripts/rough.js')
			script(src='scripts/app.js')
